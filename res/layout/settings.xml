<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/main_bg"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/setting_sampleRate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="采样码率"
        android:textColor="#ffffff" />

	<RadioGroup
	    android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        
	     <RadioButton
	        android:id="@+id/radioButton_8000"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:checked="true"
	        android:text="8000Hz" />

   		 <RadioButton
	        android:id="@+id/radioButton_16000"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="16000Hz" />
   	</RadioGroup>

    <TextView
        android:id="@+id/tutorial_sampleRate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tutorial_sampleRate"
        android:textSize="10sp" />
    
	    <View
	        android:layout_width="fill_parent"
	        android:layout_height="1px"
	        android:layout_marginBottom="3dp"
	        android:background="#FFFFFF" >

	    </View>

	    <TextView
	        android:id="@+id/setting_threshold"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="阈值选择"
	        android:textColor="#ffffff"  />	    
	    <Spinner
	        android:id="@+id/spinner1"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content" />

	    <TextView
	        android:id="@+id/tutorial_threshold"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/tutorial_threshold"
	        android:textSize="10sp" />

	    <View
	        android:layout_width="fill_parent"
	        android:layout_height="1px"
	        android:layout_marginBottom="3dp"
	        android:background="#FFFFFF" >

	    </View>


	    <TextView
	        android:id="@+id/setting_times"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="最低次数"
	        android:textColor="#ffffff"  />	    	    
	    <Spinner
	        android:id="@+id/spinner2"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content" />

	    <TextView
	        android:id="@+id/tutorial_minTimes"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/tutorial_mintimes"
	        android:textSize="10sp" />

	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="5dp"
	        android:gravity="center_horizontal" >

   		   <Button
   		       android:id="@+id/button_ok"
   		       android:layout_width="fill_parent"
   		       android:layout_height="wrap_content"
   		       android:layout_marginTop="20dp"
   		       android:text="确定" />
	        
	    </LinearLayout>

</LinearLayout>